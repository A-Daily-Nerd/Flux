{
  "scopeName": "source.flx",
  "name": "Flux",
  "fileTypes": ["flx"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#identifiers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-colon.flx", "match": ":\\?.*$" },
        { "name": "comment.block.flx", "begin": ":\\{", "end": ":\\}", "name": "comment.block.flx" }
        
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.java",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.java", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.java", "match": "\\b-?\\d+\\.\\d+\\b" },
        { "name": "constant.numeric.integer.java", "match": "\\b-?\\d+\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        { "name": "keyword.control.java", "match": "\\b(let|if|else|while|for|return|fun|print|true|false|input)\\b" },
        { "name": "constant.language.boolean.java", "match": "\\b(true|false)\\b" },
        { "name": "support.function.builtin.java", "match": "\\b(print|input|len)\\b" }
      ]
    },
    "types": {
      "patterns": [
        { "name": "storage.type.java", "match": "\\b(Int|Str|Str|double|Bool|void)\\b" }
      ]
    },
    "identifiers": {
      "patterns": [
        { "name": "variable.other.java", "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b" }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.java", "match": "[+\\-*/=<>!]+" },
        { "name": "punctuation.separator.comma.java", "match": "," },
        { "name": "punctuation.section.brackets.begin.java", "match": "\\(" },
        { "name": "punctuation.section.brackets.end.java", "match": "\\)" },
        { "name": "punctuation.section.array.begin.java", "match": "\\[" },
        { "name": "punctuation.section.array.end.java", "match": "\\]" }
      ]
    }
  }
}
